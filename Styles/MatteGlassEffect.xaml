<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="MatteGlass" TargetType="Window">
        <Setter Property="AllowsTransparency" Value="True"/>
        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="Background" Value="#80202020"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Window">
                    <Grid>
                        <Rectangle>
                            <Rectangle.Effect>
                                <BlurEffect Radius="25"/>
                            </Rectangle.Effect>
                            <Rectangle.Fill>
                                <VisualBrush Stretch="None" Visual="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Content}"/>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Border Background="#CCFFFFFF" CornerRadius="10" Padding="16">
                            <ContentPresenter Content="{TemplateBinding Content}" />
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>