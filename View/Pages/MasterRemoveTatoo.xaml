<Page x:Class="Amalgama.View.Pages.MasterRemoveTatoo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Amalgama.View.Pages"
      mc:Ignorable="d" 
      Background="#F3F3F3"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MasterRemoveTatoo">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="35"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="35"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="65"/>
        </Grid.RowDefinitions>

        <!-- Верхний левый угол -->
        <Grid Grid.Row="0" Grid.Column="1">
            <StackPanel Orientation="Horizontal">
                <Border x:Name="ArrowButton"
             MouseDown="ArrowBut_MouseDown"
             Style="{StaticResource ArrowBackbutton}"
             HorizontalAlignment="Left"
             Margin="15,15,0,0">
                    <Image Source="/Images/ArrowBackButton.png" 
                Stretch="Uniform"/>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Левая боковая панель -->
        <Grid Grid.Column="0" Grid.RowSpan="3">
            <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0.5" EndPoint="0.5,0.5">
                <LinearGradientBrush.GradientStops>
                    <GradientStop Color="#B8B8B8" Offset="0.15"/>
                    <GradientStop Color="#DCDCDC" Offset="1.95"/>
                </LinearGradientBrush.GradientStops>
            </LinearGradientBrush>
            </Grid.Background>
        </Grid>

        <!-- Правая боковая панель -->
        <Grid Grid.Column="3" Grid.RowSpan="3">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#B8B8B8" Offset="0.15"/>
                    <GradientStop Color="#DCDCDC" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Image x:Name="CloseButton"
                    MouseDown="Closer_MouseDown"
                    Source="/Images/Closed.png"
                    Height="15"
                    Width="15"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"/>
        </Grid>

        <!-- Изображение слева -->
        <Grid Grid.Column="1" Grid.Row="1">
            <Image Source="/Images/MastersPersonalDate/MasterArisha.png" 
                    Height="450"
                    Width="350"
                    Stretch="Fill"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="25,10,0,0"
                    x:Name="ImgAnimated">
                <Image.RenderTransform>
                    <TranslateTransform Y="0" X="0"/>
                </Image.RenderTransform>
            </Image>
        </Grid>
        <!-- Текст справа -->
        <Grid Grid.Column="2" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="250"/>
            </Grid.RowDefinitions>
            <Border Background="Transparent" Grid.Row="0">
                <Grid HorizontalAlignment="Left">
                    <!-- Заголовок -->
                    <TextBlock x:Name="TxtWriteTitle"
                               Style="{StaticResource OtherTxt}"
                               TextWrapping="Wrap"
                               FontSize="25"
                               VerticalAlignment="Top"
                               MaxHeight="75" 
                               Margin="0,10,0,0"/>
                    <!-- Основной текст -->
                    <TextBlock x:Name="TxtWrite"
                               Style="{StaticResource OtherTxt}"
                               TextWrapping="Wrap"
                               FontSize="25"
                               VerticalAlignment="Top"
                               MaxHeight="500" 
                               Margin="0,60,0,65"/>
                    <!-- Увеличен отступ сверху -->
                </Grid>
            </Border>
            <Border Grid.Row="1"
                    x:Name="AnimatedBRD"
                    VerticalAlignment="Top">
                <Border.RenderTransform>
                    <TranslateTransform Y="50"/>
                </Border.RenderTransform>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <!-- Первый Border -->
                    <Border Grid.Column="0"
                            Height="55"
                            Width="210">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" 
                                              Direction="-90" 
                                              ShadowDepth="4" 
                                              Opacity="0.2" 
                                              BlurRadius="8"/>
                        </Border.Effect>
                        <Border BorderBrush="Gray"
                                BorderThickness="0.35"
                                Background="#F3F3F3"
                                Padding="0,0,8,4">
                            <!-- Отступ справа и снизу для компенсации тени -->
                            <TextBlock Text="Качество"
                                           FontSize="18"
                                           Style="{StaticResource Content}" 
                                           TextAlignment="Center"
                                           VerticalAlignment="Center"/>
                        </Border>
                    </Border>
                    <!-- Второй Border -->
                    <Border Grid.Column="1"
                            Height="55"
                            Width="210">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" 
                                              Direction="-90" 
                                              ShadowDepth="4" 
                                              Opacity="0.2" 
                                              BlurRadius="8"/>
                        </Border.Effect>
                        <Border BorderBrush="Gray"
                                BorderThickness="0.35"
                                Background="#F3F3F3"
                                Padding="0,0,8,4">
                            <!-- Отступ справа и снизу для компенсации тени -->
                            <TextBlock Text="Коммуникабельность"
                                       FontSize="18"
                                       Style="{StaticResource Content}" 
                                       TextAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                    </Border>
                    <!-- Третий Border -->
                    <Border Grid.Column="2"
                            Height="55"
                            Width="210">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" 
                                              Direction="-90" 
                                              ShadowDepth="4" 
                                              Opacity="0.2" 
                                              BlurRadius="8"/>
                        </Border.Effect>
                        <Border BorderBrush="Gray"
                                BorderThickness="0.35"
                                Background="#F3F3F3"
                                Padding="0,0,8,4">
                            <!-- Отступ справа и снизу для компенсации тени -->
                            <TextBlock Text="Опыт"
                                       FontSize="18"
                                       Style="{StaticResource Content}" 
                                       TextAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
